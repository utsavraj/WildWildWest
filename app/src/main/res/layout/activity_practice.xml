<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Practice"
    android:background="@drawable/background_practice">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom" >

    <TextView
        android:id="@+id/Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00s"
        android:textColor="#ffffff"
        android:textSize="80sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        android:paddingTop="15dip"
        android:paddingBottom="15dip"
        android:layout_alignParentBottom = "true">


        <ImageView
            android:id="@+id/startposition"
            android:layout_height="250dp"
            android:layout_width="250dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="200sp"
            android:src="@drawable/startposition" />

        <ImageView
            android:id="@+id/endposition"
            android:layout_height="250dp"
            android:layout_width="250dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="200sp"
            android:src="@drawable/endposition" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom = "true">
    <Button
        android:id="@+id/START"
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:enabled="false"
        android:background="#c02527"
        android:text="START"
        android:textSize="100sp"
        android:textColor="#ecd6ad" />
    </LinearLayout>


</RelativeLayout>
