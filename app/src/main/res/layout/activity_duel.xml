<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Duel"
    android:background="@drawable/duel_background">


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">
        <TableRow>
            <TextView
                android:id="@+id/Timer_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00s"
                android:textColor="#ffffff"
                android:textSize="60sp" />


            <TextView
                android:id="@+id/Timer_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00s"
                android:textColor="#ffffff"
                android:gravity="right"
                android:padding="3dip"
                android:textSize="60sp" />
        </TableRow>

        <TableRow>
            <TextView
            android:id="@+id/Player_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1"
            android:textColor="#ffffff"
                android:textStyle="bold"
            android:textSize="25sp" />

            <TextView
                android:id="@+id/Player_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 2"
                android:textStyle="bold"
                android:gravity="right"
                android:padding="3dip"
                android:textColor="#ffffff"
                android:textSize="25sp" />
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/mLlayoutBottomButtons" >
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mLlayoutBottomButtons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <Button
                android:id="@+id/RESET"
                android:layout_width="match_parent"
                android:layout_above="@+id/START"
                android:layout_height="30sp"
                android:enabled="false"
                android:background="#555A5E"
                android:text="RESET"
                android:textSize="20sp"
                android:textColor="#ecd6ad" />

            <Button
                android:id="@+id/START"
                android:layout_width="match_parent"
                android:layout_height="130sp"
                android:enabled="false"
                android:background="#c02527"
                android:text="START"
                android:textSize="100sp"
                android:textColor="#ecd6ad" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
